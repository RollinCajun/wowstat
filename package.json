{
  "build": {
    "appId": "at.wowst",
    "productName": "WoW Stat",
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**"
    ],
    "extraResources": [
      "node_modules/puppeteer/.local-chromium/**"
    ]
  },
  "main": "app/main.js",
  "scripts": {
    "postinstall": "cd app && npm install && cd ..",
    "startwin": "electron app/main.js",
    "start": "ELECTRON_DEV=1 bash -c 'cd app && electron ./main.js'",
    "icon": "sips -s format icns build/icon.png build/icon@2x.png --out build/icon.icns",
    "dist": "electron-builder && open dist",
    "distwin": "electron-builder --win nsis --publish never && rmdir /s /q dist\\win-unpacked 2>nul || exit 0",
    "distwin:unpacked": "electron-builder --win nsis --publish never",
    "storewin": "electron-windows-store --input-directory dist\\win-unpacked  --output-directory dist\\win-store --flatten true --package-version 4.0.0 --package-name \"Wot Stat\""
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "puppeteer": "^24.37.3"
  }
}
